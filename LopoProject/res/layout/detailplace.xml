<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="#e0e0df">
  
  <RelativeLayout
	android:id="@+id/actionbar"
	android:orientation="horizontal" 
	android:layout_width="fill_parent"
	android:layout_height="50dip" 
	>
	
		<ImageView 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"	
		android:layout_marginLeft="5dip"
		android:src="@drawable/locpo"
		android:layout_alignParentTop="true"
		android:layout_alignParentBottom="true"/>
		
		<ImageView 
		android:layout_width="1px" 
		android:src="#515150"
		android:layout_height="wrap_content" 		
		android:id="@+id/bordertwo" 
		android:layout_toLeftOf="@+id/search"
		android:layout_alignParentBottom="true"
		android:layout_alignParentTop="true" />
		
		<Button 
		android:background="@drawable/searchbutton"
		android:id="@+id/search" 
		android:layout_toLeftOf="@+id/borderone"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_centerVertical="true" 	
		android:scaleType="fitXY"		
		/>		
		
		<ImageView 
		android:layout_width="wrap_content" 
		android:src="#515150" 
		android:layout_height="wrap_content"
		android:id="@+id/borderone" 
		android:layout_alignParentTop="true"
		android:layout_alignParentBottom="true"
		android:layout_alignBottom="@+id/contribute" 		
		android:layout_toLeftOf="@+id/contribute" />

		<Button 
		android:background="@drawable/contributebutton" 		
		android:layout_width="wrap_content"
		android:layout_height="wrap_content" 
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true" 
		android:id="@+id/contribute"				
		android:scaleType="fitXY" />
		
	</RelativeLayout>

	<ScrollView 
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		android:fadeScrollbars="true"
		android:background="#e0e0df"
		android:layout_below="@+id/actionbar"
		> 
	<RelativeLayout
		 android:id="@+id/lay"
		 android:layout_width="fill_parent"
		 android:layout_height="fill_parent"
		 android:layout_marginRight="10dip"
		 android:background="#e0e0df"		 
		 >
	
	<TextView
		android:id="@+id/NamePlace"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text=""
		android:textSize="18sp"
		android:textStyle="bold"
		android:textColor="#333333"
		android:layout_marginBottom="7dip"
		android:layout_marginTop="20dip"
		android:gravity="center_vertical|center_horizontal"
		
		/>
	<View   android:id="@+id/firstDivider"
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:background="#000080" />
        
	<TextView
		android:id="@+id/Distance"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text=""
		android:textSize="13sp"
		android:textStyle="bold"
		android:textColor="#b9b9b9"
		android:layout_marginBottom="20dip"
		android:gravity="center_vertical|center_horizontal"
		android:layout_below="@+id/NamePlace"
		/>
		
	<TextView
		android:id="@+id/Address"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text=""
		android:textSize="13sp"
		android:textStyle="bold"
		android:textColor="#333333"
		android:layout_marginBottom="20dip"
		android:gravity=""
		android:layout_below="@+id/Distance"		
		/>
		
	<TextView
		android:id="@+id/Phonenumber"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text=""
		android:textSize="13sp"
		android:textStyle="bold"
		android:textColor="#333333"
		android:layout_marginBottom="20dip"
		android:gravity=""
		android:layout_below="@+id/Address"
		/>
		
	<TextView
		android:id="@+id/Description"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text=""
		android:textSize="13sp"
		android:textStyle="bold"
		android:textColor="#333333"
		android:layout_marginBottom="20dip"
		android:gravity="center_vertical|center_horizontal"
		android:layout_below="@+id/Phonenumber"
		/>
		
  	</RelativeLayout>
    </ScrollView>
</RelativeLayout>
